<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.origiontest.activity.TestFragmentActivity">

        <Button
            android:id="@+id/btn_add_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD  Fragment1" />

        <Button
            android:id="@+id/btn_add_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD  Fragment2" />

        <Button
            android:id="@+id/btn_remove_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove  Fragment2" />

        <Button
            android:id="@+id/btn_repalce_frag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="replace  Fragment1" />

        <Button
            android:id="@+id/btn_pop_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pop back button" />

        <Button
            android:id="@+id/btn_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn hide fragment2" />

        <Button
            android:id="@+id/btn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn show fragment2" />




    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
